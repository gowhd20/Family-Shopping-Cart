<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".MeActivity"
    android:background="#A0FFFFFF">

    <ImageView
        android:layout_width= "match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@drawable/me_page"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"/>

    <ImageView
        android:layout_width= "80dp"
        android:layout_height="80dp"
        android:adjustViewBounds="true"
        android:src="@drawable/home_page_me"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"/>

    <ImageView
        android:layout_width= "22dp"
        android:layout_height="22dp"
        android:adjustViewBounds="true"
        android:src="@drawable/edit_white"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="157dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="45dp"
        android:onClick="UserNameEdit"/>

    <ImageView
        android:layout_width= "22dp"
        android:layout_height="22dp"
        android:id="@+id/UserNameSave_imageView"
        android:adjustViewBounds="true"
        android:src="@drawable/plus_empty"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="160dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="45dp"
        android:onClick="UserNameSave"/>



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/UserName_editText"
        android:textAlignment="center"
        android:text="Arash"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="#00FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="85dp"/>


</RelativeLayout>
